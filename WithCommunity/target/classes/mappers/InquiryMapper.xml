<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.with.community.dao.InquiryDAO">

	<!-- 글 목록 -->
	<select id="selectInquiryList" resultType="InquiryVO">
	select 
		inq_no
	   ,inq_title
	   ,inq_content
	   ,inq_name
	   ,answerYn
	   ,inq_regdate
	from tbl_inquiry
	order by inq_no desc
	limit #{pageStart}, #{perPageNum}
	</select>

	<!-- 게시글 조회 -->
	<select id="selectInquiryDetail" parameterType="int" resultType="InquiryVO">
		select
		 *
		from 
		 tbl_inquiry
		where inq_no = #{inq_no}
	</select>
	
	<!-- 프로필 나의 문의 개수 -->
	<select id="selectInqCnt" resultType="int">
		select count(inq_no) from tbl_inquiry 
	</select>
	
	<!-- 글쓰기 -->
	<insert id="insertInquiry">
	insert into tbl_inquiry
	(
	   inq_no
	  ,inq_title
	  ,inq_content
	  ,inq_name
	  ,inq_regdate
	) values
	(
	   #{inq_no}
	  ,#{inq_title}
	  ,#{inq_content}
	  ,#{inq_name}
	  ,now()
	)
	</insert>
</mapper>